<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context="com.ekylibre.android.SelectSpecieFragment">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/input_dialog_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">         <!-- android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" -->

        <android.support.v7.widget.Toolbar
            android:id="@+id/input_dialog_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Sélectionnez une espèce"
            app:titleTextAppearance="@style/Base.TextAppearance.AppCompat.Title"
            app:titleTextColor="@color/icons"
            android:background="@color/accent"/>

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.SearchView
        android:id="@+id/specie_search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/field_search"
        app:queryBackground="@android:color/transparent"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/species_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_simple"
        android:scrollbars="vertical"
        android:background="@drawable/border_top"/>

</LinearLayout>
