<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@drawable/border_bottom">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/equipment_zone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/equipment_arrow"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingStart="@dimen/start_end_include_margin"
            android:paddingEnd="@dimen/start_end_include_margin"
            app:srcCompat="@drawable/icon_arrow_down"
            android:animateLayoutChanges="true"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/equipment_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/category_header_size"
            android:textColor="@color/primary_dark"
            android:text="@string/label_equipments"
            android:paddingTop="@dimen/top_bottom_include_margin"
            android:paddingBottom="@dimen/top_bottom_include_margin"
            android:paddingStart="@dimen/start_end_include_margin"
            android:paddingEnd="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/equipment_add_label"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:text="@string/add"
            android:textAllCaps="true"
            android:textColor="@color/action_text"
            android:gravity="center_vertical"
            app:layout_constraintStart_toEndOf="@+id/equipment_label"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/equipment_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/none"
            app:layout_constraintBaseline_toBaselineOf="@id/equipment_label"
            app:layout_constraintStart_toEndOf="@+id/equipment_label"
            android:visibility="gone"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.Group
        android:id="@+id/equipment_recycler_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="equipment_recycler,equipment_recycler_bottom_margin"
        android:visibility="gone"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/equipment_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/start_end_include_margin"
            android:layout_marginEnd="@dimen/start_end_include_margin"
            android:layout_marginBottom="@dimen/start_end_include_margin"
            app:layout_constraintTop_toBottomOf="@id/equipment_zone"
            android:background="@drawable/border_input_list" />

        <View
            android:id="@+id/equipment_recycler_bottom_margin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_bottom_include_margin"
            app:layout_constraintTop_toBottomOf="@id/equipment_recycler"/>

</android.support.constraint.ConstraintLayout>